
@{
    Layout = null;
}



@model TheBakeryShopper.Models.UserDetails

@{
    ViewData["Title"] = "User Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">

        @using (Html.BeginForm("LoginForm", "Login", FormMethod.Post))
        {

            <div class="form-group">
                @Html.LabelFor(model => model.UserName, new { @class = "control-label" })

                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                <span>@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })</span>

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UserPassword, new { @class = "control-label" })
                @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control" })
                <span>@Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })</span>

            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>


        }

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

